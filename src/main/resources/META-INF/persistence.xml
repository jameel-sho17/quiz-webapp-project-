<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="quizPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- Entity klase -->
    <class>com.example.quiz.model.User</class>
    <class>com.example.quiz.model.Quiz</class>
    <class>com.example.quiz.model.Question</class>
    <class>com.example.quiz.model.Answer</class>
    <class>com.example.quiz.model.QuizSession</class>
    <class>com.example.quiz.model.Player</class>
    <class>com.example.quiz.model.PlayerAnswer</class>

    <properties>
      <!-- JDBC konekcija (prilagodi url/user/password svojoj bazi!) -->
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/quizdb?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value= "#tanya$"/>

      <!-- Dovoljno je da navedemo dialect ili URL; ostavljam i jedno i drugo radi sigurnosti -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

      <!-- Hibernate postavke -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>



